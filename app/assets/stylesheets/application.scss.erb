:root {
  --alabaster: #f9f9f9; /*white-ish*/
	--wild-sand: #f4f4f4; /*white-touch of gray*/
	--alto: #d3d3d3; /*unclickable gray color*/
	--boulder: #767676; /*darker gray*/
	--tundora: #363636; /*darkest gray*/
}
#main{
	font-family: 'Raleway', sans-serif;
}
.absolute{
	position:absolute;
}
.box-with-shadow{
  background: var(--alabaster);
  box-shadow: 0 1px 4px rgba(0,0,0,.24);
  border-radius: 0.3em;
	margin: 0px 0px 1.4em 0px;
	max-width:25em;
  padding:1em 3em 1em 3em;
}
.box-with-shadow-unpadded{
	padding:0;
}
.box-with-shadow:hover{
  box-shadow: 0 3px 10px rgba(0,0,0,.23);
}
/*BLOCK*/
.border-block{
	border: 1px solid black;
	border-radius: 4px;
}
.border-block:hover{
	border: 1px solid #767676;
}
.center-block{
	margin-left: auto;
	margin-right:auto;
	left:0;
	right:0;
}
/*IMAGES*/
#mainBanner{
	background-image: url(<%= asset_path 'pano_chicken_backyard_for_web_medium.jpg' %>);
	background-position: center center;
	background-size: cover;
	background-repeat: no-repeat;
	height: 200px;
	margin-bottom: 40px;
}
/*GENERAL*/
.chicken-select-list > div{
	height: 150px;
	display: inline-block;
	width:50%;
}
.chicken-select-list-item-container{
	height: 140px; 
	padding: 30px 0px 15px 0px;
	position: relative;
	text-align: center;
}
.chicken-select-list-item{
	width: 150px;
	text-align:left;
}
.egg-marker{
	background-image: url(<%= asset_path 'egg_icon' %>);
	display:inline-block;
	height: 16px;
	width: 16px;
	z-index: 10;
}
.hand-on-hover:hover{
	cursor:pointer;
	cursor:hand;
}
.image-upload{
	content: "Upload Image";
	background-color:white !important;
	color:white !important;
}
a.no-decoration, a.no-decoration:hover, a.no-decoration:visited{
	color: var(--tundora);
	text-decoration: none;
	p.date-block{
		color:var(--boulder);
	}
}
.overlay-unselectable{
	background-color:rgba(0,0,0,0.4);
}
.left-heading{
	padding-left:0px;
	text-align:center;
}
.right-heading{
	padding-right:0px;
	text-align:center;
}
/*@media (max-width: 700px) and (orientation: landscape) {

}*/
@media (min-width: 500px){
	.chicken-select-list-item{
		width: 180px;
	}
	.chicken-select-list-item-container{
		padding: 30px 5px 15px 5px;
	}
}

@media (min-width: 768px){
	.chicken-select-list-item{
		width: 200px;
	}
	.chicken-select-list-item-container{
		padding: 30px 15px 15px 15px;
	}
	#mainBanner{
		height: 300px;
	}
}
@media (min-width: 992px){
	.left-heading{
		padding-left:200px;
		text-align:left;
	}
	.right-heading{
		padding-right:200px;
		text-align:right;
	}
}


