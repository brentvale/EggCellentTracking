<%= link_to "Go Back", chickens_url %>
<div style="padding:30px">
	<h5><%= @chicken.chicken_name %></h5>
	<p><%= @chicken.biography %></p>
	arrival date: <%= @chicken.arrival_date %></br>
	departure date: <%= @chicken.departure_date %></br>
	<%= @chicken.breed %></br>
	
	<%= simple_form_for @chicken do |f| %>
		<%= f.input :photo, as: :file %><br /><br />
	  <%= f.button :submit %>
	<% end %>
	
	<% unless flash[:errors].nil? %>
		<% flash[:errors].each do |val| %>
			<%= val %>
		<% end %>
	<% end %>
</div>